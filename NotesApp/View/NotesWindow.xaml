<Window x:Class="NotesApp.View.NotesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:NotesApp.View"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NotesApp.ViewModel"
        Title="NotesWindow"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <Window.Resources>
        <vm:NotesViewModel x:Key="Vm" />
    </Window.Resources>
    <DockPanel DataContext="{StaticResource Vm}">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Command="{Binding NewNotebookCommand}" Header="New note_book" />
                <MenuItem Command="{Binding NewNoteCommand}"
                          CommandParameter="{Binding SelectedNotebook}"
                          Header="New _note" />
                <Separator />
                <MenuItem Click="MenuItem_OnClick" Header="E_xit" />
            </MenuItem>
        </Menu>
        <Grid />
    </DockPanel>
</Window>
